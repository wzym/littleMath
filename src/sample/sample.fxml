<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="parent" focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" stylesheets="@sample.css" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="Файл">
               <MenuItem fx:id="menuItemToClose" mnemonicParsing="false" onAction="#closeApplication" text="Закрыть" />
           </Menu>
           <Menu mnemonicParsing="false" text="Модули">
               <MenuItem mnemonicParsing="false" text="Delete" />
           </Menu>
           <Menu mnemonicParsing="false" text="Справка">
               <MenuItem mnemonicParsing="false" text="About" />
           </Menu>
       </MenuBar>
   </top>
   <right>
       <VBox fx:id="vBoxTools" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
           <padding>
               <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
           </padding>
           <CheckBox fx:id="checkBoxFullScreen" mnemonicParsing="false" onAction="#setCheckBoxFullScreenControl" text="Полный экран" />
       </VBox>
   </right>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
   <opaqueInsets>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </opaqueInsets>
   <center>
      <Pane fx:id="paneSim" styleClass="field" BorderPane.alignment="CENTER">
         <children>
              <Canvas id="fieldToDraw" fx:id="fieldToDraw" cache="true" focusTraversable="true" height="246.0" nodeOrientation="INHERIT" pickOnBounds="true" styleClass="canvas" width="195.0" />
         </children>
         <BorderPane.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </Pane>
   </center>
</BorderPane>
